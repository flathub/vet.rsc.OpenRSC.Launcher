{
    "id": "vet.rsc.OpenRSC.Launcher",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "openrsc",
    "separate-locales": false,
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.openjdk17"
    ],
    "finish-args": [
        "--share=network",
        "--socket=x11",
        "--share=ipc",
        "--device=dri",
        "--socket=pulseaudio",
        "--env=PATH=/usr/bin:/app/bin:/app/jre/bin"
    ],
    "modules": [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands" : [ "/usr/lib/sdk/openjdk17/install.sh" ]
        },
        {
            "name": "openrsc",
            "buildsystem": "simple",
            "build-commands": [
                "install -D openrsc /app/bin/openrsc",
                "install -D OpenRSC.jar /app/share/OpenRSC.jar",
                "install -Dm644 vet.rsc.OpenRSC.Launcher.svg /app/share/icons/hicolor/scalable/apps/vet.rsc.OpenRSC.Launcher.svg",
                "install -Dm644 vet.rsc.OpenRSC.Launcher.desktop /app/share/applications/vet.rsc.OpenRSC.Launcher.desktop",
                "install -Dm644 vet.rsc.OpenRSC.Launcher.appdata.xml /app/share/appdata/vet.rsc.OpenRSC.Launcher.appdata.xml"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "openrsc",
                    "commands": [
                          "exec java -jar /app/share/OpenRSC.jar --dir ~/.var/app/vet.rsc.OpenRSC.Launcher/ \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "url": "https://rsc.vet/downloads/OpenRSC.jar",
                    "sha256": "c9e7eb0093b765101a569c396c602cdd37e4f6a73db43dc584e449bcfef8b747"
                },
                {
                    "type": "file",
                    "path": "vet.rsc.OpenRSC.Launcher.svg"
                },
                {
                    "type": "file",
                    "path": "vet.rsc.OpenRSC.Launcher.desktop"
                },
                {
                    "type": "file",
                    "path": "vet.rsc.OpenRSC.Launcher.appdata.xml"
                }
            ]
        }
    ]
}
